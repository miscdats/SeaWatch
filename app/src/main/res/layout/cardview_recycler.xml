<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="@dimen/big_marge"
    android:background="@color/colorAccent"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_results"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_marginStart="@dimen/lil_marge"
            android:layout_marginLeft="@dimen/lil_marge"
            android:layout_marginTop="@dimen/lil_marge"
            android:layout_marginEnd="@dimen/lil_marge"
            android:layout_marginRight="@dimen/lil_marge"
            android:layout_marginBottom="@dimen/lil_marge"
            android:textSize="@dimen/words" />

        <ImageView
            android:id="@+id/image_camera"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignBottom="@+id/text_results"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/lil_marge"
            android:layout_marginBottom="@dimen/lil_marge"
            android:cropToPadding="false" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
